---
import "../styles/global.css";
import "@fontsource/ibm-plex-sans/400.css";
import "@fontsource/ibm-plex-sans/500.css";
import "@fontsource/ibm-plex-sans/700.css";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import JDNavContainer from "@components/navigation/JDNavContainer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Johnny.Decimal is a system to organise projects (or your life, or anything else)"
    />
    <meta name="theme-color" content="#DB170E" />
    <link
      rel="alternate"
      type="application/rss+xml"
      href="/rss.xml"
      title="RSS Feed"
    />
    <link rel="me" href="https://hachyderm.io/@johnnydecimal" />
    <title>{title}║J•D</title>
  </head>
  <body>
    <div class="layout-grid">
      <div class="layout-grid-area-site-header">
        <Header />
      </div>
      <div class="layout-grid-area-navigation">
        <JDNavContainer />
      </div>
      <div class="layout-grid-area-content">
        <slot />
      </div>
    </div>

    <!-- 
    <Header />
    <div class="nav-main-flex">
      <JDNavContainer />
      <main class="main">
        <slot />
      </main>
    </div>
    <Footer /> 
    -->
  </body>

  <style>
    /* Styles for iPad portrait and below: mobile first. */
    html {
      background-color: var(--offwhite);
      height: -webkit-fill-available;

      /* https://www.aleksandrhovhannisyan.com/blog/62-5-percent-font-size-trick/ */
      font-size: 62.5%;
    }

    body {
      color: var(--offblack);
      background-color: var(--offwhite);

      margin: 0 auto;
      max-width: 68rem;

      /* https://www.aleksandrhovhannisyan.com/blog/62-5-percent-font-size-trick/ */
      font-size: 1.6rem;
    }

    .layout-grid {
      display: grid;
      grid-template-areas:
        "siteheader"
        "content"
        "navigation";
    }
    .layout-grid-area-site-header {
      grid-area: siteheader;
    }
    .layout-grid-area-navigation {
      grid-area: navigation;
    }
    .layout-grid-area-content {
      grid-area: content;
    }

    /* Style for iPad-landscape+. */
    /* https://getbootstrap.com/docs/5.0/layout/breakpoints/#max-width */
    @media screen and (min-width: 991.98px) {
      .layout-grid {
        display: grid;
        grid-template-areas:
          "siteheader siteheader"
          "navigation content";
      }
    }
  </style>
</html>
