---
import "../styles/global.css";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import JDNavigation from "@components/JDNavigation/JDNavigation.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Johnny.Decimal is a system to organise projects (or your life, or anything else)"
    />
    <meta name="theme-color" content="#DB170E" />
    <link
      rel="alternate"
      type="application/rss+xml"
      href="/rss.xml"
      title="RSS Feed"
    />
    <link rel="me" href="https://hachyderm.io/@johnnydecimal" />
    <title>{title}║J•D</title>
  </head>
  <body>
    <Header />

    <div class="NavMain">
      <main>
        <!-- <JDPage> fills the slot. -->
        <slot />
      </main>
      <JDNavigation />
    </div>

    <Footer />
  </body>

  <style lang="scss">
    @use "/src/styles/johnny" as *;

    .NavMain {
      display: grid;
      grid-template-areas:
        "main"
        "nav";
      max-width: $site-width;
      margin: 0 auto;

      @include for-tablet-landscape-up {
        grid-template-areas: "nav main";
        gap: $space-large;
      }
    }

    main {
      grid-area: main;
    }
  </style>
</html>
