---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import "@fontsource/bitter";
import "../styles/global.css";

import JDNavigation from "@components/navigation/JDNavigation.astro";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans"
		/>
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Johnny.Decimal is a system to organise projects (or your life, or anything else)"
		/>
		<title>{title}</title>
	</head>
	<body>
		<header>
			<h1>Johnny.Decimal</h1>
		</header>
		<div class="nav-main-flex">
			<nav class="jdnavigation">
				<JDNavigation />
			</nav>
			<main>
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	/* Mobile-first, remember. So define everything for phone, then use
	   @media queries to re-define for tablet+ or whatever. */
	.nav-main-flex {
		display: flex;
		flex-direction: column-reverse;
	}

	/* Mobile-first. */
	/* https://getbootstrap.com/docs/5.0/layout/breakpoints/#max-width */
	@media screen and (min-width: 991.98px) {
		.nav-main-flex {
			flex-direction: row;
		}
		.jdnavigation {
			margin-right: 1rem;
			width: 30%;
		}
	}

	header > h1 {
		border-bottom: 1px solid var(--jd-bg-colour);
		/* border-top: 1px solid var(--jd-bg-colour); */
		/* border-radius: 3px; */
		font-family: Berkeley Mono Trial, ui-monospace, SFMono-Regular, Menlo,
			Monaco, Consolas, Liberation Mono, Courier New, monospace;
		font-size: 1rem;
		/* font-variant-caps: small-caps; */
		margin-top: 0;
		padding-bottom: 0.5rem;
		text-align: center;
	}
</style>
