---
import "../styles/global.css";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import JDNavigation from "@components/navigation/JDNavigation.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Johnny.Decimal is a system to organise projects (or your life, or anything else)"
    />
    <meta name="theme-color" content="#DB170E" />
    <link
      rel="alternate"
      type="application/rss+xml"
      href="/rss.xml"
      title="RSS Feed"
    />
    <link rel="me" href="https://hachyderm.io/@johnnydecimal" />
    <title>{title}║J•D</title>
  </head>
  <body>
    <div class="header-container">
      <Header />
    </div>

    <div class="grid-container">
      <main>
        <script>
          // Slot is filled by <JDPage /> as it has `layout: <Layout />`.
        </script>
        <slot />
      </main>
      <nav>
        <JDNavigation />
      </nav>
    </div>
    <Footer />
  </body>

  <style>
    /* Styles for tablet portrait and below: mobile first. */

    .header-container {
      border-bottom: 2px solid var(--jd-highlight-colour);
      margin-bottom: 1.5rem;
    }

    .grid-container {
      display: grid;
      grid-template-areas:
        "main"
        "nav";
      justify-content: center;
      max-width: var(--site-width);
      margin: 0 auto;
    }

    main {
      grid-area: main;
    }

    nav {
      grid-area: nav;
      justify-items: left;
      margin: 0 0.7rem;
    }

    /* Tablet landscape and up */
    @media (min-width: 900px) {
      .grid-container {
        grid-template-areas: "nav main";
      }

      nav {
        width: 40ch;
        margin-right: 4ch;
      }
    }

    @media print {
      nav {
        display: none;
      }
    }
  </style>
</html>
