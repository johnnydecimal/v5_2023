---
import Layout from "./Layout.astro";
import { jdGetAcidTypeFromString } from "@johnnydecimal/jdgetacidtypefromstring";

export interface Props {
  number: string;
  title: string;
  area: string;
  category: string;
}
const { number, title, area, category } = Astro.props.frontmatter;

/**
 * Create a link to this page's area.
 */
const areaUrl = "/" + area.replaceAll(" ", "_").toLowerCase();

/**
 * Create a link to this page's category, if it has one. (Areas don't.)
 */
let categoryUrl;
if (category) {
  categoryUrl = areaUrl + "/" + category.replaceAll(" ", "_").toLowerCase();
}

/**
 * We only want to show an ID in the 'location' box if it's actually an ID,
 * i.e. not if it's an AC.
 *
 * Current jdGetAcid... expects "10-19 A title", so fudge that for now.
 * TODO: Fix.
 */
let numberAcidType = jdGetAcidTypeFromString(number + " FIX THIS");
---

<Layout title={`${number} ${title}`}>
  <div class="layout-container">
    <div class="locationbox-container">
      <div class="locationbox-brackets locationbox-brackets-top">
        <div>┌</div>
        <div class="locationbox-brackets-horizontal-line">
          ─ Location
          ───────────────────────────────────────────────────────────────────────────────────────────
        </div>
        <div>┐</div>
      </div>
      <div class="locationbox-acid-details">
        <div class="locationbox-acid-details-grid">
          <pre>Area     :</pre><pre>{area}</pre>
          <pre>Category :</pre><pre>{category}</pre>
          <pre>ID       :</pre><pre>{numberAcidType.jdAcidType === "id" ? number : "-"}</pre>
          <pre>Title    :</pre><pre>{title}</pre>
        </div>
      </div>
      <div class="locationbox-brackets locationbox-brackets-bottom">
        <div>└</div>
        <div class="locationbox-brackets-horizontal-line">
          ────────────────────────────────────────────────────────────────────────────────────────
        </div>
        <div>┘</div>
      </div>
    </div>

    <div class="jd-brackets jd-brackets-top">
      <div>┌</div>
      <div class="jd-brackets-horizontal-line">
        ─ Content
        ─────────────────────────────────────────────────────────────────────────────────────────────
      </div>
      <div>┐</div>
    </div>

    <div class="jdcontent">
      <slot />
    </div>

    <div class="jd-brackets jd-brackets-bottom">
      <div>└</div>
      <div class="jd-brackets-horizontal-line">
        ─────────────────────────────────────────────────────────────────────────────────────────────
      </div>
      <div>┘</div>
    </div>
  </div>
</Layout>

<style>
  pre {
    margin: 0;
  }

  .layout-container {
    margin: 0 0.7rem;
  }

  .locationbox-container {
    font-family: "Berkeley Mono", Monaco, "Cascadia Mono", "Segoe UI Mono",
      "Roboto Mono", "Oxygen Mono", "Ubuntu Monospace", "Source Code Pro",
      "Fira Mono", "Droid Sans Mono", "Courier New", monospace;
    margin-bottom: 1rem;
  }
  .locationbox-brackets {
    display: grid;
    grid-template-columns: 1ch 1fr 1ch;
    white-space: nowrap;
  }
  .locationbox-brackets-top {
    margin-bottom: 1rem;
  }
  .locationbox-brackets-bottom {
    margin-top: 1rem;
  }
  .locationbox-brackets-horizontal-line {
    overflow: hidden;
  }
  .locationbox-acid-details-grid {
    display: grid;
    grid-template-columns: 11ch 1fr;
    margin-left: 2ch;
  }

  .jd-brackets {
    font-family: "Berkeley Mono", Monaco, "Cascadia Mono", "Segoe UI Mono",
      "Roboto Mono", "Oxygen Mono", "Ubuntu Monospace", "Source Code Pro",
      "Fira Mono", "Droid Sans Mono", "Courier New", monospace;
    display: grid;
    grid-auto-flow: column;
    grid-template-columns: 1ch 1fr 1ch;
    white-space: nowrap;
  }
  .jd-brackets-top {
    margin-bottom: 1rem;
  }
  .jd-brackets-bottom {
    margin-top: 1rem;
  }
  .jd-brackets-horizontal-line {
    overflow: hidden;
  }

  .monospace {
    font-family: "Berkeley Mono", ui-monospace, SFMono-Regular, Menlo, Monaco,
      Consolas, "Liberation Mono", "Courier New", monospace;
  }
</style>

<style is:global>
  /* Global style for all the stuff in the <slot /> */
  .jdcontent {
    margin: 0 2ch;
    line-height: 2rem;
    font-size: 1.6rem;
    font-family: "IBM Plex Sans";
  }

  .jdcontent h1:first-child,
  .jdcontent h2:first-child {
    margin-top: 0;
  }

  .jdcontent h1,
  .jdcontent h2,
  .jdcontent h3 {
    font-weight: 500;
    /* text-decoration: underline; */
    /* text-decoration-color: var(--jd-bg-colour); */
    margin-top: 2rem;
    margin-bottom: 1.25rem;
  }

  .jdcontent h1 {
    font-size: 2.25rem;
    /* line-height: 1.25; */
  }

  .jdcontent h2 {
    font-size: 1.75rem;
  }

  .jdcontent h3 {
    font-size: 1.5rem;
  }

  .jdcontent p {
    margin: 0.5rem 0;
  }

  .jdcontent code {
    background-color: var(--jd-bg-colour);
    border-bottom: 2px solid var(--jd-highlight-colour);
    color: var(--offwhite);
    padding-inline: 0.25rem;
  }

  .jdcontent ol {
    list-style-type: decimal;
    list-style-position: inside;
  }

  .jdcontent ul {
    list-style-type: disc;
    list-style-position: inside;
  }

  .jdcontent a {
    text-decoration-line: underline;
    color: var(--jd-highlight-colour);
  }

  .jdcontent a:visited {
    text-decoration-line: none;
    color: var(--jd-bg-colour);
  }

  .jdcontent a:hover {
    background-color: var(--jd-highlight-colour);
    color: var(--offwhite);
  }

  .jdcontent blockquote {
    background-color: var(--jd-offwhitered);
    border: 1px dotted var(--jd-bg-colour);
    border-left: 5px solid var(--jd-bg-colour);
    margin: 2rem 0;
    padding-left: 1.5rem;
    padding-right: 1rem;
    font-family: "Berkeley Mono", Monaco, "Cascadia Mono", "Segoe UI Mono",
      "Roboto Mono", "Oxygen Mono", "Ubuntu Monospace", "Source Code Pro",
      "Fira Mono", "Droid Sans Mono", "Courier New", monospace;
    font-size: 0.9rem;
    font-style: italic;
    /* line-height: 1.5rem; */
    text-indent: -1.7ch;
  }

  .jdcontent blockquote em {
    /* text-decoration: underline; */
    font-style: normal;
  }

  .jdcontent sup {
    font-family: "Berkeley Mono", Monaco, "Cascadia Mono", "Segoe UI Mono",
      "Roboto Mono", "Oxygen Mono", "Ubuntu Monospace", "Source Code Pro",
      "Fira Mono", "Droid Sans Mono", "Courier New", monospace;
  }

  .jdcontent blockquote sup {
    font-style: normal;
  }

  .jdcontent hr {
    border: 1px solid var(--jd-highlight-colour);
    background-color: var(--jd-offwhitered);
    margin: 2rem auto;
    min-height: 4px;
    max-width: 100px;
    box-shadow: 2px -1px var(--jd-bg-colour);
  }

  .jdcontent img {
    border: 1px solid var(--jd-highlight-colour);
    margin: 1rem;
  }
</style>
