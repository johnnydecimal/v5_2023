---
import Layout from "./Layout.astro";
import Location from "@components/Location/Location.astro";

export interface Props {
  number: string;
  title: string;
  area: string;
  category: string;
}
const { number, title, area, category } = Astro.props.frontmatter;
---

<Layout title={`${number} ${title}`}>
  <div class="JDPage">
    <Location number={number} title={title} area={area} category={category} />

    <div class="jdcontent">
      <slot />
    </div>
  </div>
</Layout>

<style lang="scss">
  @use "/src/styles/johnny" as *;

  .JDPage {
    padding-bottom: 4rem;
  }
</style>
