---
export interface Props {
	number: string;
	title: string;
	area: string;
	category: string;
}

import Layout from "./Layout.astro";

const { number, title, area, category } = Astro.props.frontmatter;
---

<Layout title={`${number} ${title}`}>
	<div class="p-8">
		<!-- p-8 spacing just for visual help while building; remove -->
		<div class="jdid monospace">
			{number}
			{title}
		</div>
		<div class="jdac monospace">
			{area} &gt; {category}
		</div>
		<div class="jdcontent">
			<slot />
		</div>
	</div>
</Layout>

<style>
	.monospace {
		font-family: "Berkeley Mono Trial", ui-monospace, SFMono-Regular, Menlo,
			Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
	}

	.jdid {
		border: 2px solid red;
		font-size: 2rem;
		padding: 1rem;
	}

	.jdac {
		border: 1px solid red;
		font-size: 1rem;
		padding: 1rem;
	}

	/* See global.css for .jdcontent styles */
</style>
