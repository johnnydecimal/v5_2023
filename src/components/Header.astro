    <line x1="4.8" y1="18" x2="7.8" y2="5" class="r1"></line>

    <line x1="12" y1="18" x2="12.25" y2="17" class="r2"></line>
    <line x1="13.5" y1="10.3" x2="14.7" y2="5" class="r2"></line>

    <line x1="18.8" y1="18" x2="20" y2="13" class="r3"></line>
